<% provide(:title, 'Signup') %>

<div class="devise-container">
  <div class="devise-frame">
    <div class="devise-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>新規アカウント登録</h2>

        <%= render "shared/error_message", object: f.object %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "form signin_name" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form signin_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form signin_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form signin_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "アカウント登録", class: "btn btn-register" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
