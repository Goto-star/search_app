<% provide(:title, 'Login') %>

<div class="devise-container">
  <div class="devise-frame">
    <div class="devise-inner">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2>ログイン</h2>

          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form login-email", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: "form login-password", autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-register" %>
          </div>
        <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
