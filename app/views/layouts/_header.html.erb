<header>
  <div class='container'>
    <% if user_signed_in? %>
      <%= link_to "Where's Hosp", posts_path, class: 'logo' %>
      <nav>
        <ul class='global-nav'>
          <li><%= link_to 'profile',  user_path(current_user), class: 'global-ul'%><li>
          <li><%= link_to 'setting', edit_user_registration_path, class: 'global-ul' %></li>
          <li><%= link_to 'logout', destroy_user_session_path, class: 'global-ul', method: :delete %>
        </ul>
      </nav>
    <% else %>
     <%= link_to "Where's Hosp", root_path, class: 'logo' %>
     <nav>
        <ul class='global-nav'>
          <li><%= link_to 'about', about_path, class: 'global-ul' %></li>
          <li><%= link_to 'guestlogin', users_guest_sign_in_path, method: :post, class: 'global-ul', data: { confirm: "ゲストログインしますか?" } %>
          <li><%= link_to 'login', new_user_session_path, class: 'global-ul' %></li>
          <li><%= link_to 'sign up', new_user_registration_path, class: 'global-ul' %></li>
        </ul>
     </nav>
    <% end %>
  </div>
</header>
